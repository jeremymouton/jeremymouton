head
	meta(charset="utf-8")
	meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
	title #{title}
	meta(name='description', content='#{description}')
	meta(name='viewport', content='width=device-width, initial-scale=1')
	link(rel='stylesheet', href='/assets/less/styles.css')

	link(rel="icon" type="image/x-icon" href="https://s3.amazonaws.com/dubium/projects/jeremymouton/favicon.ico")

	script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.2/jquery.min.js')
	script.
		window.jQuery || document.write('<script src="#{js_url}/vendor/jquery-2.0.2.min.js"><\/script>')
	script(src='//cdnjs.cloudflare.com/ajax/libs/moment.js/2.0.0/moment.min.js')
	script(src='#{js_url}/vendor/tumblr-parser.js')

body
	.wrapper
		!= partial("../_header")

		.dark-bg
			.container.main
				.section-head
					h1 Work
						p View more on 
							a(href="#{github}") Github
				.project
					.project-screenshots
						!= yield

					.project-description
						h2 #{ title }

						p: a.url(href="http://#{ url }") #{ url }

						p: strong Stack: 
							span.stack #{ stack }

						p: strong Made in: 
							span.date #{ date }

						p #{ desc }	

		.dark-bg
			!= partial("../_footer")

	script(src='#{js_url}/vendor/bootstrap.min.js')
	script(src='#{js_url}/plugins.js')
	script(src='#{js_url}/main.js')
	script(src='#{js_url}/vendor/retina-1.1.0.min.js')
	script(src='#{js_url}/vendor/lastfm-parser.js')
	script(src='//cdnjs.cloudflare.com/ajax/libs/fastclick/0.6.7/fastclick.min.js')

